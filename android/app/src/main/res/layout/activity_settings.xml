<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#2196F3"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server Address"
        android:textSize="14sp"
        android:textColor="#757575"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp" />

    <RadioGroup
        android:id="@+id/serverRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingVertical="8dp">

        <!-- Radio buttons will be added programmatically -->

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OCR Language"
        android:textSize="14sp"
        android:textColor="#757575"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp" />

    <RadioGroup
        android:id="@+id/languageRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingVertical="8dp">
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the server address based on your network setup.\n\n• Use 10.0.2.2 when running on an Android emulator\n• Use LAN addresses when connecting from a real device"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp" />

</LinearLayout>
