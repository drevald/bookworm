<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Shelf Photo Thumbnail -->
        <ImageView
            android:id="@+id/shelfPhotoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="#EEE"
            android:contentDescription="Shelf photo" />

        <!-- Shelf Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/shelfNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shelf Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 books"
                android:textSize="14sp"
                android:textColor="#666" />

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/deleteShelfButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete shelf"
            android:src="@drawable/ic_delete"
            app:tint="#D32F2F" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
